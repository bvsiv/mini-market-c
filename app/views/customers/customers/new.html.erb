<div class="login">
  <div class="container">
    <div class="form">

      <h1>Sign up</h1>
      <%= form_for [:customers, @customer] do |f| %>  
        <div class="field"> 
          <%= f.label :name %><br> 
          <%= f.text_field :name %> 
        </div> 
        <div class="field"> 
          <%= f.label :email %><br> 
          <%= f.email_field :email %> 
        </div>
        <div class="field"> 
          <%= f.label :password %><br> 
          <%= f.password_field :password %> 
        </div>
        <div class="field"> 
          <%= f.label :password_confirmation %><br> 
          <%= f.password_field :password_confirmation %> 
        </div>
        <div class="actions"> 
          <%= f.submit "Sign up" %> 
        </div> 
      <% end %>
  
    </div>
  </div>
</div>
