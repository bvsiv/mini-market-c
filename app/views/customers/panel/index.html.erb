<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"/>
    <%= favicon_link_tag 'minilogo3.png' %>
    <%= stylesheet_link_tag('customers')%>
    <title>Mini Market</title>
  </head>

  <body>
    <div class="preloader">
      <div class="cssload-speeding-wheel"></div>
    </div>

    <div id="container">

      <%= render "layouts/navbar", logout_path: "logout", panel_name: "Customer's", li1_class: "", li2_class: "active", li3_class: "", panel_path: "panel", products_path: "products" %>

        <div id="page-wrapper">
          <div class="container-fluid">
            <div class="row bg-title">
              <div class="col-12">
                <h4 class="page-title">Welcome <%=@customer.name %>!</h4>
                <h3 class="page-title">You're on your Customer panel</h3></div>
              </div>
            </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="white-box">
                <h3 class="box-title">Here you can see your offers</h3>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th>Merchant</th>
                          <th>Status</th>
                          <th>Modified</th>
                          <th>Price</th>
                          <th>Details</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% @offers.each do |o| %>
                        <tr>
                          <td><%= o.product.name %></td>
                          <td><%= o.product.merchant.name %></td>
                          <td><%= o.status %></td>
                          <td><%= o.updated_at.strftime("%d.%m.%Y %H:%M:%S") %></td>
                          <td><%= number_to_currency(o.suggested_price, unit:"zÅ‚", separator: ",", delimiter: " ", format: "%n %u") %></td>
                          <td><a href="#" target="_blank" class="btn details btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">See more</a></td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      <%= render "layouts/footer" %>

    </div>
  </body>
</html>
